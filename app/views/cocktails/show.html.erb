<h1><%= @cocktail.name.upcase %></h1>

<p>Cocktail name: <%= @cocktail.name.capitalize %></p>
<p>Ingredients:</p>
<% @cocktail.doses.each do |dose| %>
<p>Ingredient: <%= dose.ingredient.name %>, Description: <%= dose.description %></p>
<%= link_to "Delete", dose_path(dose), method: :delete, data:  { confirm: "Are you sure?" }, class: "card-remove-link" %>
<% end  %>




<p><%= link_to 'Cocktails List', cocktails_path %></p>
<p><%= link_to 'Edit the dose',  new_cocktail_dose_path(@cocktail) %></p>


